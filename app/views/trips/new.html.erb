<header>
<h1>Enter your trip!</h1>
</header>
<body class="content">
  <br>
<%= image_tag("placeholder.png") %><br><br>
<%= form_with model: @trip do |f| %>
<!-- (model: trip, local: true) -->
<%= f.label :city %>
<%= f.collection_select :destination_id, Destination.all, :id, :city, {:include_blank => 'Please Select'}%>

<%= f.label :state %>
<%= f.collection_select :destination_id, Destination.all, :id, :state, {:include_blank => 'Please Select'}%>

<%= f.label :country %>
<%= f.collection_select :destination_id, Destination.all, :id, :country, {:include_blank => 'Please Select'} %>
<br>
If not listed, <%= link_to "add destination", new_destination_path %>
<br><br>

<%= f.label :trip_title, 'Name Your Trip' %>
<%= f.text_field :trip_title %><br><br>
<%= f.label :itinerary %>
<%= f.text_area :itinerary %><br><br>
<%= f.label :"Picture" %>
<%= f.file_field :photo %><br><br>
<%= f.label :comment %>
<%= f.text_area :comment %><br><br>
<!-- need to come back to this -->
<%= f.submit %><br>
<% end %>
<br>
<br><%= link_to "back", :back, method: 'get' %>
</body>
