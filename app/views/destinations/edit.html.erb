<header>
<h1>Edit your destination!</h1>
</header>

<body class="content">
<div >
  For United States
  <%= form_with model: @destination do |f| %>
   <%= f.label :city%>
   <%= f.text_field :city %>
   <%= f.label :state%>
   <%= f.text_field :state %>
   <%= f.collection_select :destination_id, Destination.all, :id, :state %>

   <%= f.submit %>
  <% end %>
</div>
</div>
For Outside of United States
  <%= form_with model: @destination do |f| %>
   <%= f.label :city%>
   <%= f.text_field :city %>
   <%= f.label :country%>
   <%= f.text_field :country %>
   <%= f.collection_select :destination_id, Destination.all, :id, :country %>

   <%= f.submit %>
  <% end %>
</div>
<br><%= button_to "create new trip", new_trip_path, method: 'get' %>
<br><%= button_to "back to my trips", trips_path, method: 'get' %>

</body>
